{
  "name": "backend",
  "private": true,
  "type": "module",
  "packageManager": "pnpm",
  "exports": {
    "./schemas/*": "./src/schemas/*.ts"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "db:generate": "node --import tsx ./node_modules/drizzle-kit/bin.cjs generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:studio": "dotenv -e .env -- drizzle-kit studio",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "argon2": "^0.41.1",
    "dotenv": "^16.4.5",
    "@fastify/cors": "^10.0.1",
    "@fastify/jwt": "^9.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.0.0",
    "drizzle-orm": "^0.36.1",
    "fastify": "^5.1.0",
    "pg": "^8.13.1",
    "uuid": "^11.0.3",
    "zod": "^3.23.8",
    "fastify-type-provider-zod": "^4.0.2"
  },
  "devDependencies": {
    "dotenv-cli": "^7.4.2",
    "@biomejs/biome": "1.9.4",
    "vitest": "^2.1.6",
    "@types/node": "^22.10.1",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.28.1",
    "tsx": "^4.19.2",
    "typescript": "5.7.2"
  }
}
