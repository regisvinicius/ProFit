# Server
PORT=3000
NODE_ENV=development

# Database (required when using DB)
DATABASE_URL=postgres://app:app@localhost:5432/profit

# CORS (comma-separated origins; empty = same origin only)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Auth (JWT + Refresh)
JWT_SECRET=your-secret-min-32-chars-change-in-production
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# Google OAuth (optional; uncomment when adding Login with Google)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_CALLBACK_URI=http://localhost:3000/auth/google/callback
